<script>
	import * as Leaflet from "leaflet"
	import "leaflet/dist/leaflet.css"

	let map = Leaflet.map("map").setView([57.4358, -4.2616], 17)
	Leaflet.tileLayer("http://{s}.google.com/vt/lyrs=s,h&x={x}&y={y}&z={z}", {
		maxZoom: 21,
		subdomains: ["mt0", "mt1", "mt2", "mt3"],
		attribution: "Data from <a href='https://maps.google.co.uk' target='_blank' rel='noopener noreferrer'>Google Maps</a>",
	}).addTo(map)

	Leaflet.marker([57.43589, -4.261064], {
		icon: Leaflet.icon({
			iconUrl: "http://cdn.torbreckorchard.co.uk/marker-icon.png",
			iconSize: [25, 41],
			iconAnchor: [12, 39],
			shadowUrl: "http://cdn.torbreckorchard.co.uk/marker-shadow.png",
			shadowSize: [41, 41],
			shadowAnchor: [13, 39],
		}),
	}).addTo(map)
</script>

