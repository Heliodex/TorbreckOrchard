---
import { ViewTransitions } from "astro:transitions"

const { frontmatter, title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="An orchard of heritage fruit trees in Inverness-shire, situated close to Loch Ness in the Scottish Highlands."
		/>
		<title>{frontmatter?.title ?? title}</title>

		<ViewTransitions />
	</head>
	<body>
		<header>
			<nav>
				<a href="/">Home</a>
				<a href="/about">About</a>
				<a href="/products">Products</a>
				<a href="/trees">Fruit Trees</a>
				<a href="/contact">Contact Us</a>
				<a href="/gallery">Gallery</a>
			</nav>
		</header>
		<main>
			<slot />
		</main>

		<style lang="stylus">
			body
				background-image url("https://cdn.torbreckorchard.co.uk/orchtard.webp")
				background-filter blur(5px)
				background-attachment fixed
				background-size cover

			header
				position sticky
				top 0
				width 100%
				background-color hsl(96, 100, 14)
				z-index 899

			nav
				display grid
				grid-template-columns repeat(6, 1fr)
				row-gap 0.2rem
				column-gap 0.2rem

				max-width 52rem
				margin auto
				padding 3vh 3vw

				@media screen and (max-width 700px)
					grid-template-columns repeat(3, 1fr)

				@media screen and (max-width 400px)
					grid-template-columns repeat(2, 1fr)

				a
					color black
					background-color #fff
					padding 0.4rem 0
					border-radius 0.7rem
					overflow hidden
					white-space nowrap
					text-decoration none
					text-overflow string
					text-align center
					width 100%
					font-weight bold
					font-size 1.1rem
					transition 0.2s
					&:hover
						transition 0.2s
						background-color #abf590
		</style>

		<style lang="stylus" is:global>
			@font-face
				font-family "Lexend"
				src url("/assets/Lexend.woff2") format("woff2")
				font-display swap

			:root
				overflow hidden

			html
				background-size 100vw 100vh
				background-attachment fixed

			body
				font-family Lexend, sans-serif
				color white
				margin auto
				font-size 1.2rem
				font-weight 300
				overflow-y scroll
				height 100vh

			main
				max-width 52rem
				padding 2% 3% 3% 3%
				margin auto
				margin-bottom 10vh
				background-color hsla(96, 100, 14, 0.8)
				border-radius 0 0 1rem 1rem

				a
					color cyan
					&:visited
						color palevioletred
					&:hover
						color red
					&:active
						color yellow

			h1
				font-size 2.5rem
				margin 0
			h2
				font-size 2rem
				font-weight 500

			p
			ul
				font-size 1.2rem

			::-webkit-scrollbar
				width 1rem
				height 1rem
				cursor pointer
				&-track
				&-corner
					background hsl(96, 100, 12)

				&-thumb
					background hsl(96, 100, 16)
					border 0.2rem solid hsl(96, 100, 12)
					border-radius 1rem
					width 0.5rem
					
					&:hover
						background hsl(96, 100, 20)
					&:active
						background hsl(96, 100, 8)
		</style>
	</body>
</html>
