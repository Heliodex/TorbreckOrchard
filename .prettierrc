{
	"semi": false,
	"arrowParens": "avoid",
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"bracketSameLine": true,
	"htmlWhitespaceSensitivity": "ignore",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-astro"],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{ "files": "*.astro", "options": { "parser": "astro" } }
	]
}
